html
    height: 100%

body
    position: relative
    min-height: 100%

a
    color: #333

a:hover
    text-decoration: none

a:focus
    text-decoration: none

.header
    padding: 10px
    background-color: #18987b
    width 100%
    height 100px

.header h3,h5
    color: #ffffff

.header-title
    cursor: pointer

.footer 
    position: absolute
    right: 0
    bottom: 0
    left: 0
    padding: 5px
    background-color: #18987b
    z-index: 9999

.footer h5
    color: #ffffff
    text-align: center


.col-item 
    display: inline
    font-weight: bold
    color: #696969
    margin-right: 32%
    overflow: hidden

.table-header 
    padding: 10px

.table-footer 
    padding: 10px


.pagination 
    cursor: pointer


.check-box 
    position: relative
    cursor: pointer
    margin: 4px 10px 0px 2px !important

.item-selected 
    background-color: #18987b !important
    color: #ffffff

/*Override row of class table-striped by item.selected*/
.table-striped > tbody > tr:nth-child(odd).item-selected > td 
    background-color: #18987b

.table-striped > tbody > tr:nth-child(odd) > td.item-selected 
    background-color: #f9f9f9

.btn span.glyphicon
    opacity: 0

.btn.active span.glyphicon
    opacity: 1


.check-box:before
    content: ""
    position: absolute
    left: 0
    z-index: 1
    width: 2rem
    height: 2rem



.check-box:checked:before 
    margin: 2px 0 0 5px
    height: 1rem
    width: 1rem
    background: #18987b


.check-box:after 
    content: ""
    position: absolute
    left: 0
    top: -3px
    width: 2rem
    height: 2rem
    background: #ffffff
    border: 2px solid #868686
    cursor: pointer

.music-breadcrumb
    margin-bottom 10px

.toggle-btn
    color: #fff
    position: absolute
    left: 4px
    z-index 9999

#wrapper 
    padding-left: 0
    -webkit-transition: all 0.5s ease
    -moz-transition: all 0.5s ease
    -o-transition: all 0.5s ease
    transition: all 0.5s ease


#wrapper.toggled 
    padding-left: 250px


#sidebar-wrapper 
    z-index: 1000
    position: absolute
    left: 250px
    width: 0
    height: 86%
    margin-left: -250px
    overflow-y: auto
    background: #00614b
    -webkit-transition: all 0.5s ease
    -moz-transition: all 0.5s ease
    -o-transition: all 0.5s ease
    transition: all 0.5s ease


#wrapper.toggled #sidebar-wrapper 
    width: 250px


#page-content-wrapper 
    width: 100%
    position: absolute
    padding: 15px


#wrapper.toggled #page-content-wrapper 
    position: absolute
    margin-right: -250px


/* Sidebar Styles */

.sidebar-nav 
    position: absolute
    top: 0
    width: 250px
    margin: 0
    padding: 0
    list-style: none


.sidebar-nav li 
    text-indent: 20px
    line-height: 40px


.sidebar-nav li a 
    display: block
    text-decoration: none
    color: #e5e5e5


.sidebar-nav li a:hover 
    text-decoration: none
    color: #fff
    background: rgba(255,255,255,0.2)


.sidebar-nav li a:active,
.sidebar-nav li a:focus 
    text-decoration: none


.sidebar-nav > .sidebar-brand 
    height: 65px
    font-size: 18px
    line-height: 60px


.sidebar-nav > .sidebar-brand a 
    color: #e5e5e5


.sidebar-nav > .sidebar-brand a:hover 
    color: #fff
    background: none


@media(min-width:768px) 
    #wrapper 
        padding-left: 0
    

    #wrapper.toggled 
        padding-left: 250px
    

    #sidebar-wrapper 
        width: 20px
    

    #wrapper.toggled #sidebar-wrapper 
        width: 250px
    

    #page-content-wrapper 
        padding: 20px
        position: relative
    

    #wrapper.toggled #page-content-wrapper 
        position: relative
        margin-right: 0
    
